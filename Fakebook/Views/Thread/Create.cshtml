@model Fakebook.ViewModels.ThreadCRU
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.State</h2>

<div class="container">
@using (Html.BeginForm("AddOrEdit", "Thread"))
{
    <!--Ocultamos el Id-->
    @Html.HiddenFor(model => model.Thread.Id)
    <div class="form-group">
        @Html.Label("Canción")
        @Html.TextBoxFor(model => model.Thread.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Genero")
        @Html.DropDownListFor(model => model.Thread.IdCategory, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("¿Que sentiste?")
        @Html.TextAreaFor(model => model.Thread.Description, new { @class = "form-control" })
     </div>
        <input class="btn-success" type="submit" value="Guardar" />
}
</div>

