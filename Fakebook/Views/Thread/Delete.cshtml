@model Fakebook.Models.Thread
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Eliminar</h2>
    @using (Html.BeginForm("Delete", "Thread"))
    {
        @Html.HiddenFor(m => m.Id)
      

        <div class="form-group">
            <p>
                Está seguro que desea eliminar el post ID: @Model.Id ?
            </p>
        </div>

        <p>
            @Html.ActionLink("Cancelar", "Index")
            <input type="submit" class="btn-danger" value="Sí :'v'" />
        </p>
    }
</div>
